#include <bits/stdc++.h>
using namespace std;

class Solution
{
private:
    int f(int n, vector<int> &nums, vector<int> &dp)
    {
        if (n == 0)
        {
            return nums[0];
        }
        if (n < 0)
        {
            return 0;
        }

        if (dp[n] != -1)
        {
            return dp[n];
        }
        int pick = nums[n] + f(n - 2, nums, dp);
        int notPick = 0 + f(n - 1, nums, dp);

        return dp[n] = max(pick, notPick);
    }

public:
    int rob(vector<int> &nums)
    {
        int n = nums.size();
        vector<int> dp(n + 1, -1);
        return f(n - 1, nums, dp);
    }
};